<h1>Director #<%= @director_id %> details</h1>
 <a href="/directors">Go back</a>
 <hr>
<dl>
<dt>Name</dt>
<dd><%= @director_hash.name %> </dd>
<dt>DOB</dt>
<dd><%= @director_hash.dob %></dd>
<dt>Bio</dt>
<dd><%= @director_hash.bio %></dd>
<dt>Image</dt>
<dd><img src="<%= @director_hash.image %>" width="250"></dd>
<dt>Created at</dt>
<dd><%= time_ago_in_words(@director_hash.created_at) %> ago</dd>
<dt>Updated at</dt>
<dd><%= time_ago_in_words(@director_hash.updated_at) %> ago</dd>
</dl>
 <hr>
 <h1>Filmography</h1>
 <table border="1">

 
 <tr>
  <th>ID</th>
  <th>Image</th>
  <th>Title</th>
  <th>Year</th>
  <th>Director</th>
  <th></th>

 </tr>
 <tr>

<% @filmography.each do |a_film| %>
<tr>
<td><%= a_film.id %></td>
<td><img src="<%= a_film.image %>"></td>
<td><%= a_film.title %></td>
<td><%= a_film.year %></td>
<td><%= @director_hash.name %></td>
<td><a href="/movies/<%= a_film.id %>">Show details</a></td>
</tr>
<% end %>

 </table>
