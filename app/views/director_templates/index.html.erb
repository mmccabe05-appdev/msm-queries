<h1>List of all directors</h1>
<hr>
<table border="1">
<tr>
  <th>ID</th>
  <th>Image</th>
  <th>Name</th> 
  <th>Dob</th>
  <th></th>
</tr>
<% Director.all.each do |a_thing| %>
<tr>
<td><%= a_thing.id %></td>
<td><img src="<%= a_thing.image %>" width="250px"></td>
<td><%= a_thing.name %></td>
<td><%= a_thing.dob %></td>
<td><a href="directors/<%= a_thing.id %>">Show details</a></td>
</tr>
<% end %>
